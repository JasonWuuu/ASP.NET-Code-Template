@model EmployeeViewModel

@Html.HiddenFor(m => m.EmployeeId)

<div class="form-group">
    @Html.LabelFor(t => t.LastName, new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(t => t.FirstName, new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(t => t.Birthday, new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control" })
    </div>
</div>
